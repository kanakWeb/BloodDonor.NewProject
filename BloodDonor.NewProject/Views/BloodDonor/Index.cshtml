@using BloodDonor.Models
@model List<BloodDonorEntity>
@{
    ViewData["Title"] = "Blood Donor List";
}
<h2>Blood DOnor List</h2>

<form method="get" class="row g-2 mb-3">
    <div class="col-md-4">
        <select name="bloodGroup" class="form-select">
            <option value="">All Blood Groups</option>
            @foreach (var bg in Enum.GetNames(typeof(BloodGroup)))
            {
                <option value="@bg">@bg</option>
            }
        </select>
    </div>
    <div class="col-md-4">
        <input type="text" name="address" class="form-control" placeholder="Search by Address"/>
    </div>
    <div class="col-md-4">
        <button type="submit" class="btn btn-primary">Search</button>
        </div>
</form> 

<table  class="table table-striped">
    <thead>
        <tr>
            <td>Profile</td>
            <th>Donor Name</th>
            <th>Blood Group</th>
            <th>Weight</th>
            <th>DateOfBirth</th>
            <th>Address</th>
            <th>Last Donation Date</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var donor in Model)
        {
            <tr>
                <td>
                    @if(!string.IsNullOrEmpty(donor.ProfilePicture))
                    {
                        <img src="~/@donor.ProfilePicture" alt="Donor Image" style="width:50px; height:50px; border-radius:50%;" />
                    }
                    else
                    {
                        <img src="/images/default-avatar.png" alt="Default Image" style="object-fit:cover; border-radius:50%;" />
                    }


                </td>
                <td>@donor.FullName</td>
                <td>@donor.BloodGroup</td>
                <td>@donor.Weight</td>
                <td>@donor.DateOfBirth</td>
                <td>@donor.Address</td>
                <td>@donor.LastDonationDate</td>
                <td>
                    <a href="@Url.Action("Details", "BloodDonorEntity", new { id = donor.Id })" class="btn btn-primary">View</a>
                    <a href="@Url.Action("Edit", "BloodDonorEntity", new { id = donor.Id })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("Delete", "BloodDonorEntity", new { id = donor.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
